<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.polyglot">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:icon="@mipmap/ic_app_icon_asset"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_app_icon_asset_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".NoResultsActivity" />
        <activity android:name=".ResultsActivity" />
        <activity android:name=".TrimmerActivity" />
        <activity android:name=".StoragePermissionActivity" />
        <activity android:name=".CameraPermissionActivity" />
        <activity android:name=".MainMenuActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="ocr" />
    </application>

</manifest>